				 			    // 원단위로 변경하기
				 			    var result = AddComma(value);

				 			    _$self.val(result);
				 			  })

				 			});

				 			function AddComma(dataValue) {
				 			  var separateValue = Number(dataValue).toLocaleString('en');
				 			  if (separateValue == 'NaN') {
				 			    return '';
				 			  }
				 			  return separateValue;
				 			} */

				/* 카테고리 화면 */
				function category() {
					$('#category').show();
					$('#cat_btn').show();

					$('#description').hide();
					$('#des_btn').hide();
					$('#presentation').hide();
					$('#pre_btn').hide();
				}

				/* 상세내용 화면 */
				function description() {
					$('#description').show();
					$('#des_btn').show();

					$('#category').hide();
					$('#cat_btn').hide();
					$('#presentation').hide();
					$('#pre_btn').hide();
				}

				/* 사진 올리기 화면 */
				function presentation() {
					$('#presentation').show();
