/* Setting */
@import url('https://fonts.googleapis.com/css?family=Oxygen:300,400,700&subset=latin-ext');
*:focus {outline:none;}
body {
    font-family: 'Oxygen', sans-serif;
	/*background-color: #F0F9FF; */
    margin:0;
    padding:0;
}
.container {
    width: 600px;
    /* max-width: 600px; */
    margin: 0 auto;
    margin-top: 100px;
    margin-bottom: 100px;
    
    border: 1px solid #ececec;
    background-color: #3699f60d;
    box-shadow: 0px 0px 100px -33px #0000003d;
}


body .chatHeader {
    background-color: #fff;
    position: relative;
    padding: 11px;
    padding-left: 23px;
    box-shadow: 0 6px 34px -6px #e0e0e0a6;
}

body .chatHeader > .BackBtn {
    position: absolute;
    color: #0099F6;
    font-size: 28px;
    width: 40px;
    height: 56px;
    line-height: 53px;
    text-align: center;
    left: 0;
    top: 0;
}

body .chatHeader > .headerTitle {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #1373AE;
}

body .chatHeader > .headerTitle > .NameIcon {
    width: 28px;
    height: 28px;
    line-height: 28px;
    border-radius: 50%;
    border: 1px solid #3699f6;
    text-align: center;
    flex: none;
}

body .chatHeader > .headerTitle > .Txt {
    flex: auto;
    margin-left: 10px;
}

body .chatHeader > .headerTitle > .Txt > div {
    font-size: 12px;
    margin: 2px 0;
}

body .chatSend {
    height: 48px;
  position:relative;
}

body .chatSend > .errorTxt {
    position: absolute;
    top: -27px;
    left: 0;
    right: 0;
    background-color: #fb5c5c;
    font-size: 12px;
    padding: 7px;
    color: #fff;
    text-align: center;
}

body .chatSend > .sendText {
    border: 0;
    height: 48px;
    padding-right: 55px;
    padding-left: 20px;
    font-size: 12px;
    color: #6f6f6f;
    display: block;
    width: calc(100% - 75px);
}

body .chatSend > .sendText::-webkit-input-placeholder {
    color: rgba(54, 153, 246, 0.38);
}

body .chatSend > .sendText::-moz-placeholder {
    color: rgba(54, 153, 246, 0.38);
}

body .chatSend > .sendText:-ms-input-placeholder {
    color: rgba(54, 153, 246, 0.38);
}

body .chatSend > .sendText:-moz-placeholder {
    color: rgba(54, 153, 246, 0.38);
}

body .chatSend > #send-message {
    position: absolute;
    right: 0;
    top: 0px;
    z-index: 2;
    height: 48px;
    line-height: 48px;
    border: 0;
    width: 55px;
    background-color: #fff;
    font-size: 20px;
    color: #3699f6;
    text-align: center;
}

body .chatContent {
    height: 100%;
    padding: 20px;
    min-height : 400px;
    max-height: 450px;
    overflow-y: auto;
}
body .chatContent::-webkit-scrollbar {
  width: 3px;
}

body .chatContent::-webkit-scrollbar-track {
  background: #fafafa; 
}
 
body .chatContent::-webkit-scrollbar-thumb {
  background: #3699f6; 
}
body .chatContent::-webkit-scrollbar-thumb:hover {
  background: #3699f6; 
}

body .chatContent .chat-column {
    display: flex;
    margin-bottom: 20px;
}

body .chatContent .chat-column > .item > .chat-icon {
    min-width: 40px;
    height: 30px;
    line-height: 25px;
    background-color: #fff;
    border-radius: 10px;;
    text-align: center;
    font-size: 12px;
    color: #3699f6;
    margin-right: 8px;
    padding : 3px;
    /* margin-top: 5px; */
}

body .chatContent .chat-column > .item > .chat-message {
    background-color: #37b24d;
    color: #fff;
    font-size: 12px;
    padding: 10px;
    border-radius: 10px;
    line-height: 20px;
    max-width: 400px;
    /* text-align: right; */
}

body .chatContent .chat-column > .item > .message-date {
    font-size: 10px;
    color: #3699f6;
    font-weight: 600;
    margin-top: 5px;
}

body .chatContent .chat-column.company {
    flex-direction: row-reverse;
}

body .chatContent .chat-column.company > .item > .chat-icon {
    margin-right: 0;
    margin-left: 8px;
    background-color: #fff;
    color: #3699f6;
    
}

body .chatContent .chat-column.company > .item > .chat-message {
    background-color: #f76707;
    color: #fff;
    max-width: 400px;
    /* text-align: left; */
}

button#btn_out_chat{
    position: absolute;
    right: 15px;
    bottom: 6px;
    font-weight: bold;
    border: 1px solid;
    padding: 5px;
}

.like_img{
width:40px;
height:40px;
margin-left:10px;
}
